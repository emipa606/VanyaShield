      <li Class="VanyaMod.CompProperties_VanyaUniversalShieldBelt">
        <versionInfo>V-R0/17</versionInfo>
        <alias>Revolution</alias>
        <startingTicksToReset>7200</startingTicksToReset>
        <energyLossPerDamage>0.02</energyLossPerDamage>
        <meleeAbsorbFactor>0.5</meleeAbsorbFactor>
        <canDodge>true</canDodge>
        <dodgeChanceFactor>1.5</dodgeChanceFactor>
        <breakWithSmoke>true</breakWithSmoke>
        <fireFoamBurster>true</fireFoamBurster>
